# LOCAL DEVELOPMENT ENVIRONMENT
# Copy this file to .env in project root for local development
# This configuration is for development machine (hostname != "mirror")

# Environment indicator (leave empty or set to false for auto-detection)
# The system will auto-detect LOCAL environment if hostname is not "mirror"
ENVIRONMENT=local

# Database Configuration (Local PostgreSQL)
DB_USER=bdoor_user
DB_PASSWORD=bdoor_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bdoor_postgres

# Application Settings
PORT=8080
DEBUG=True
SECRET_KEY=your-local-secret-key-change-this

# Features (automatically enabled for LOCAL)
# - No authentication required
# - Database sync enabled (syncs with mirror)
# - Hot reload enabled
# - Full debug mode
# - Experimental features enabled

# Mirror Database Connection (for sync)
# Used by database_sync.py to sync with mirror server
MIRROR_DB_HOST=mirror
MIRROR_DB_PORT=5432
MIRROR_DB_USER=bdoor_user
MIRROR_DB_PASSWORD=bdoor_password
MIRROR_DB_NAME=bdoor_postgres

